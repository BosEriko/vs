{
    // ================================================================================
    // Custom CSS
    // ================================================================================
    "vscode_custom_css.imports": [
        "file:///C:/Users/Bos/scoop/apps/vscode/1.100.2/data/user-data/User/custom.css"
    ],
    "vscode_custom_css.policy": true,
    // ================================================================================
    // Theme & UI Settings
    // ================================================================================
    "window.title": "Editor",
    "workbench.colorTheme": "poimandres",
    "editor.fontFamily": "Fira Code, JetbrainsMonoNL Nerd Font Mono",
    "editor.fontLigatures": true,
    "workbench.iconTheme": "city-lights-icons-vsc",
    "glassit.alpha": 240,
    "window.titleBarStyle": "custom",
    "editor.minimap.enabled": false,
    "editor.lightbulb.enabled": "off",
    "editor.stickyScroll.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "workbench.sideBar.location": "right",
    "breadcrumbs.enabled": false,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.enablePreview": true,
    "editor.guides.indentation": false,
    "workbench.tree.renderIndentGuides": "none",
    "window.menuBarVisibility": "compact",
    "workbench.startupEditor": "none",
    "terminal.integrated.cursorStyle": "line",
    "workbench.activityBar.location": "hidden",
    "window.commandCenter": false,
    "editor.renderWhitespace": "none",
    "terminal.integrated.tabs.enabled": false,
    "workbench.statusBar.visible": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#ffffff00",
        "widget.shadow": "#ffffff00",
        "scrollbarSlider.background": "#ffffff00",
        "focusBorder": "#ffffff00",
        "tab.activeBorderTop": "#ffffff00",
        "editorGroup.border": "#ffffff00",
        "editorGroupHeader.tabsBorder": "#ffffff00"
    },
    // ================================================================================
    // Multi Command
    // ================================================================================
    "multiCommand.commands": [
        {
            "command": "multiCommand.toggleMaximizedPanel",
            "sequence": [
                "workbench.action.toggleMaximizedPanel",
                "workbench.action.terminal.focus"
            ]
        }
    ],
    // ================================================================================
    // Vim
    // ================================================================================
    "editor.lineNumbers": "relative",
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // ================================================================================
    // Vim Hotkeys
    // ================================================================================
    "vim.leader": "<space>",
    "vim.handleKeys": {
        // Default Hotkeys
        "<C-p>": false, // Fuzzy Find (ctrl+p)
        // Custom Hotkeys
        "<C-\\>": false, // Open Explorer (ctrl+\)
        "<C-h>": false, // Previous Tab on Editor (ctrl+h)
        "<C-l>": false, // Next Tab on Editor (ctrl+l)
        "<C-z>": false, // Toggle Full Screen Terminal  (ctrl+z)
        "<C-s>": false, // Save File (ctrl+s)
        "<C-q>": false, // Close all Editors or Open Folder (ctrl+q)
        "<C-b>": false, // Copy Relative Path (ctrl+b)
        "<C-f>": false, // Search Workspace (ctrl+f)
        "<C-j>": false, // Go down in search workspace, terminal pane or quick open (ctrl+j)
        "<C-k>": false, // Go up in search workspace, suggestion, terminal pane or quick open (ctrl+k)
        "<C-n>": false, // Create new Terminal or Editor (ctrl+n)
        "<C-w>": false, // Close Terminal or Editor (ctrl+w)
        "<C-g>": false, // Search and Replace (ctrl+g)
        "<C-c>": false // Toggle Comment (ctrl+c)
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        // Activate Whichkey on Normal Mode
        {
            "before": [
                "leader",
                "leader"
            ],
            "commands": [
                "whichkey.show"
            ]
        },
        // Jump to character (Easymotion)
        {
            "before": [
                "leader",
                "f"
            ],
            "after": [
                "leader",
                "leader",
                "s"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Activate Whichkey on Visual Mode
        {
            "before": [
                "leader",
                "leader"
            ],
            "commands": [
                "whichkey.show"
            ]
        }
    ],
    "whichkey.bindings": [
        {
            "key": "d",
            "name": "Search Devdocs on cursor position",
            "type": "command",
            "command": "extension.devDocs"
        },
        {
            "key": "r",
            "name": "Reverse order of all lines",
            "type": "command",
            "command": "flip.document"
        },
        {
            "key": "i",
            "name": "Show tooltip hover message",
            "type": "command",
            "command": "editor.action.showHover"
        },
        {
            "key": "s",
            "name": "Sort lines",
            "type": "command",
            "bindings": [
                {
                    "key": "a",
                    "name": "Ascending",
                    "type": "command",
                    "command": "editor.action.sortLinesAscending"
                },
                {
                    "key": "d",
                    "name": "Descending",
                    "type": "command",
                    "command": "editor.action.sortLinesDescending"
                }
            ]
        },
        {
            "key": "t",
            "name": "Toggle settings",
            "type": "command",
            "bindings": [
                {
                    "key": "s",
                    "name": "Status Wrap",
                    "type": "command",
                    "command": "workbench.action.toggleStatusbarVisibility"
                },
                {
                    "key": "w",
                    "name": "Text Wrap",
                    "type": "command",
                    "command": "editor.action.toggleWordWrap"
                },
                {
                    "key": "l",
                    "name": "Hidden Characters",
                    "type": "command",
                    "command": "editor.action.toggleRenderWhitespace"
                }
            ]
        }
    ],
    // ================================================================================
    // Terminal
    // ================================================================================
    "terminal.integrated.profiles.windows": {
        "Ubuntu (WSL)": {
            "path": "C:\\WINDOWS\\System32\\wsl.exe",
            "args": [
                "-d",
                "Ubuntu"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    // ================================================================================
    // Settings
    // ================================================================================
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "window.restoreWindows": "none",
    "update.mode": "none",
    "extensions.ignoreRecommendations": true,
    "explorer.excludeGitIgnore": true,
    "telemetry.telemetryLevel": "off",
    "window.confirmSaveUntitledWorkspace": false,
    "git.openRepositoryInParentFolders": "never",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "godotTools.lsp.serverPort": 6005,
    "godotTools.editorPath.godot4": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Godot Engine\\godot.windows.opt.tools.64.exe",
    "godotTools.editorPath.godot3": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Godot Engine\\godot.windows.opt.tools.64.exe"
}