{
    // ================================================================================
    // APC - UI Customizer
    // ================================================================================
    "window.titleBarStyle": "native",
    "apc.menubar.compact": true,
    "apc.electron": {
        "frame": false,
        "titleBarStyle": "hidden"
    },
    "apc.header": {
        "height": 37
    },
    "apc.sidebar.titlebar": {
        "height": 37
    },
    "apc.activityBar": {
        "size": 40,
        "itemSize": 40,
        "itemMargin": 0
    },
    "apc.stylesheet": {
        ".editor-group-watermark .letterpress": "display: block !important",
        ".monaco-workbench.vs-dark .part.editor > .content .editor-group-container .editor-group-watermark > .letterpress": "background-image: url('https://raw.githubusercontent.com/BosEriko/vs/master/logo.png');",
        ".editor-group-watermark .shortcuts": "display: none !important",
        ".title-label": "display: none !important",
        ".editor-actions": "display: none !important",
        ".composite.title": "display: none !important",
        ".explorer-folders-view": "margin-top: 15px !important",
        ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important"
    },
    // ================================================================================
    // Theme
    // ================================================================================
    "workbench.colorTheme": "Sweet Dracula",
    // ================================================================================
    // Settings
    // ================================================================================
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "workbench.layoutControl.enabled": false,
    "window.menuBarVisibility": "compact",
    "window.title": "Editor",
    "workbench.statusBar.visible": false,
    "workbench.editor.enablePreview": false,
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "breadcrumbs.enabled": false,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": false,
    "editor.guides.indentation": false,
    "workbench.startupEditor": "none",
}
