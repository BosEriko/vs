{
    // ================================================================================
    // APC - UI Customizer
    // ================================================================================
    "apc.menubar.compact": true,
    "apc.electron": {
        "frame": false,
        "titleBarStyle": "hidden"
    },
    "apc.header": {
        "height": 37
    },
    "apc.sidebar.titlebar": {
        "height": 37
    },
    "apc.activityBar": {
        "size": 40,
        "itemSize": 40,
        "itemMargin": 0
    },
    "apc.stylesheet": {
        ".editor-group-watermark .letterpress": "background-image: url('https://raw.githubusercontent.com/BosEriko/vs/master/wallpaper.gif') !important",
        ".title-label": "display: none !important",
        ".editor-actions": "display: none !important",
        ".composite.title": "display: none !important",
        ".tabs.title": "background-color: rgba(255,255,255,.0) !important",
        ".tabs-and-actions-container": "background-color: none !important",
        ".explorer-folders-view": "margin-top: 15px !important",
        ".monaco-list::before": "display: none !important",
        ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important",
        ".monaco-workbench ::selection": "background-color: none !important",
    },
    // ================================================================================
    // Theme & UI Settings
    // ================================================================================
    "workbench.colorTheme": "Sweet Dracula",
    "window.titleBarStyle": "native",
    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#ffffff00",
        "widget.shadow": "#ffffff00"
    },
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "workbench.sideBar.location": "right",
    "breadcrumbs.enabled": false,
    "workbench.layoutControl.enabled": false,
    "workbench.statusBar.visible": false,
    "workbench.editor.enablePreview": false,
    "editor.guides.indentation": false,
    // ================================================================================
    // Vim
    // ================================================================================
    "editor.lineNumbers": "relative",
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.easymotionKeys": "asdfjkl;",
    "vim.easymotionMarkerBackgroundColor": "black",
    "vim.easymotionMarkerFontWeight": "normal",
    "vim.easymotionMarkerForegroundColorOneChar": "white",
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-w>": false, // Close tab
        "<C-p>": false, // Find Files
        "<C-z>": false, // Opens Terminal
        "<C-h>": false, // Previous Tab
        "<C-l>": false, // Next Tab
        "<C-s>": false, // Save File
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // ================================================================================
    // Settings
    // ================================================================================
    "window.menuBarVisibility": "compact",
    "window.title": "Editor",
    "workbench.startupEditor": "none",
    "terminal.integrated.cursorStyle": "line",
    "workbench.activityBar.location": "hidden",
    "window.commandCenter": false,
    "telemetry.telemetryLevel": "off",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
}
